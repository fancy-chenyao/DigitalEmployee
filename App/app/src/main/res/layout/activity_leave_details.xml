<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="返回"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <!-- 标题 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="请休假申请 (第2步)"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- 占位，保持标题居中 -->
        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <!-- 主内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 请假事由 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- 标签 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <!-- 红色必填图标 -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_required"
                        android:contentDescription="必填"
                        android:layout_marginEnd="8dp" />

                    <!-- 标签文字 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请假事由"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- 输入框 -->
                <EditText
                    android:id="@+id/etReason"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="请输入, 100字以内"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:gravity="top|start"
                    android:maxLength="100"
                    android:inputType="textMultiLine" />

                <!-- 字数统计 -->
                <TextView
                    android:id="@+id/tvReasonCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余字数 100"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- 拟前往地区 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- 标签 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <!-- 红色必填图标 -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_required"
                        android:contentDescription="必填"
                        android:layout_marginEnd="8dp" />

                    <!-- 标签文字 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="拟前往地区"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- 输入框 -->
                <EditText
                    android:id="@+id/etDestination"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="请输入, 100字以内"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:gravity="top|start"
                    android:maxLength="100"
                    android:inputType="textMultiLine" />

                <!-- 字数统计 -->
                <TextView
                    android:id="@+id/tvDestinationCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余字数 100"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- 附件 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 标签 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <!-- 红色必填图标 -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_required"
                        android:contentDescription="必填"
                        android:layout_marginEnd="8dp" />

                    <!-- 标签文字 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="附件 (非必须, 最多一张图片)"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- 图片上传区域 -->
                <LinearLayout
                    android:id="@+id/layoutImageUpload"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/image_upload_background"
                    android:clickable="true"
                    android:focusable="true">

                    <!-- 加号图标 -->
                    <ImageView
                        android:id="@+id/ivUploadIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_add"
                        android:contentDescription="添加图片" />

                    <!-- 上传的图片（初始隐藏） -->
                    <ImageView
                        android:id="@+id/ivUploadedImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 底部按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white">

        <!-- 上一步按钮 -->
        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="上一步"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/button_previous_background"
            android:layout_marginEnd="8dp" />

        <!-- 提交按钮 -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="提交"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/button_confirm_background"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>

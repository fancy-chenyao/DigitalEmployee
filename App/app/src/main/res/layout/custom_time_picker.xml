<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customTimePicker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="8dp"
    android:layout_margin="16dp"
    android:padding="16dp">

    <!-- 时间选择器标题 -->
    <TextView
        android:id="@+id/tvTimePickerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择结束时间"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- 时间选项列表 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 全天选项 -->
        <LinearLayout
            android:id="@+id/layoutAllDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <!-- 单选按钮 -->
            <RadioButton
                android:id="@+id/rbAllDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginEnd="16dp" />

            <!-- 选项文字 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="全天"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- 上午选项 -->
        <LinearLayout
            android:id="@+id/layoutMorning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <!-- 单选按钮 -->
            <RadioButton
                android:id="@+id/rbMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginEnd="16dp" />

            <!-- 选项文字 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上午"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- 下午选项 -->
        <LinearLayout
            android:id="@+id/layoutAfternoon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground">

            <!-- 单选按钮 -->
            <RadioButton
                android:id="@+id/rbAfternoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginEnd="16dp" />

            <!-- 选项文字 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下午"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

    </LinearLayout>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <!-- 取消按钮 -->
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <!-- 确认按钮 -->
        <TextView
            android:id="@+id/tvOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:padding="12dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</LinearLayout>

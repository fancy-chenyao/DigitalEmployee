<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.EmpLab" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/selected_blue</item>
        <item name="colorPrimaryVariant">@color/selected_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- 搜索框样式 -->
    <style name="SearchEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/search_bg</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- 功能图标样式 -->
    <style name="FunctionIcon">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/icon_background</item>
    </style>

    <!-- 功能文字样式 -->
    <style name="FunctionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- 导航项样式 -->
    <style name="NavItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- 导航图标样式 -->
    <style name="NavIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- 导航文字样式 -->
    <style name="NavText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
</resources>